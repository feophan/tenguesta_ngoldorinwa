---
import { Icon } from '@astrojs/starlight/components';
export interface Props {
  type: "wait" | "req";
}

const { type } = Astro.props as Props;
---
{
    type == "wait" &&
    <p class="sl-flex p-wait"><Icon name="seti:clock" size="1.5em" color="var(--sl-color-orange-high)" /><slot/></p>
}

{
    type == "req" &&
    <p class="sl-flex p-req"><Icon name="pen" size="1.5em" color="var(--sl-color-red-high)" /><slot/></p>
}

<style>
	p {
		padding: 0.75em 1em;
		width: max-content;
		max-width: 100%;
		align-items: center;
		gap: 0.75em;
		font-size: var(--sl-text-body-sm);
		line-height: var(--sl-line-height-headings);
	}

    p.p-wait {
		border: 1px solid var(--sl-color-orange);
		background-color: var(--sl-color-orange-low);
		color: var(--sl-color-orange-high);
	}

    p.p-req {
		border: 1px solid var(--sl-color-red);
		background-color: var(--sl-color-red-low);
		color: var(--sl-color-red-high);
	}
</style>
